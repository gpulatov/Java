
public class Assign20 {

	public static void main(String[] args) {
		int[]arr2 = new int[]{1,25,30,4,8};
		reverse(arr2);

	}

	public static void reverse(int[] arr) {
		int firstElem;
		int lastElem;
		int tempElem;
		int middleElem = arr.length / 2;

		for (int i = 0; i < arr.length; i++) {
			if (arr.length % 2 != 0 && middleElem > 0)
				lastElem = arr[(arr.length - (1 + i))];
			firstElem = arr[i];
			tempElem = firstElem;
			firstElem = lastElem;
			lastElem = tempElem;

			middleElem--;
		}
	}
}
